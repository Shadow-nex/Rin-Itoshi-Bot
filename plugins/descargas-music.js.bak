import axios from 'axios'
import fetch from 'node-fetch'

let handler = async (m, { conn, text, usedPrefix, command }) => {
  if (!text) return conn.reply(m.chat, `üéµ Ingresa el nombre de la canci√≥n\n\nEjemplo:\n*${usedPrefix + command} 3 pa 3*`, m)

  try {
    let searchUrl = `https://api.nekolabs.my.id/downloader/spotify/play/v1?q=${encodeURIComponent(text)}`
    let search = await axios.get(searchUrl, { timeout: 15000 })
    if (!search.data.status) throw new Error('No se encontr√≥ resultado.')

    let { metadata } = search.data.result
    let { title, artist, duration, cover, url: spotifyUrl } = metadata

    let caption = `„Äå‚ú¶„ÄçDescargando *<${data.title}>*\n\n> Íï• Autor ¬ª *${data.artist}*\n${data.album && data.album !== "Desconocido" ? `> ‚ùë √Ålbum ¬ª *${data.album}*\n` : ''}${data.duration ? `> ‚¥µ Duraci√≥n ¬ª *${data.duration}*\n` : ''}${data.popularity && data.popularity !== "Desconocido" ? `> ‚ú∞ Popularidad ¬ª *${data.popularity}*\n` : ''}${data.release && data.release !== "Desconocido" ? `> ‚òÅÔ∏é Publicado ¬ª *${data.release}*\n` : ''}${data.url ? `> üú∏ Enlace ¬ª ${data.url}` : ''}`

    await conn.sendMessage(m.chat, {
      image: { url: cover },
      caption
    }, { quoted: m })

    let apiV1 = `https://api.nekolabs.my.id/downloader/spotify/v1?url=${encodeURIComponent(spotifyUrl)}`
    let dl1 = await axios.get(apiV1, { timeout: 20000 })

    let downloadUrl = dl1?.data?.result?.downloadUrl

    if (!downloadUrl || downloadUrl.includes('undefined')) {
      let apiV2 = `https://api.nekolabs.my.id/downloader/spotify/v2?url=${encodeURIComponent(spotifyUrl)}`
      let dl2 = await axios.get(apiV2, { timeout: 20000 })
      downloadUrl = dl2?.data?.result?.downloadUrl
    }

    if (downloadUrl) {
      let audio = await fetch(downloadUrl)
      let buffer = await audio.buffer()

      await conn.sendMessage(m.chat, {
        audio: buffer,
        mimetype: 'audio/mpeg',
        fileName: `${title}.mp3`
      }, { quoted: m })
    } else {
      conn.reply(m.chat, `No se encontr√≥ un link de descarga v√°lido para esta canci√≥n.`, m)
    }

  } catch (e) {
    console.error(e)
    conn.reply(m.chat, `Error al buscar/descargar la canci√≥n.`, m)
  }
}

handler.help = ['spotify2 <canci√≥n>']
handler.tags = ['downloader']
handler.command = ['spotify2']

export default handler